    <!-- MODAL AGREGAR PERSONAL-->
    <div class="modal-overlay" id="modal-overlay"></div>

    <div class="modal" id="modal">
        <div class="modal-contenido">
            <div class="modal_header">
                <div>
                    <h1>Crear Producto</h1>
                </div>
                <button class="close-button" id="close-button">X</button>
            </div>
            <form action="/save" method="POST" class="modal_medium">
                <div class="modal-contenido__item" id="primaryKey">
                    <h2>SKU</h2>
                    <input class="modal_item-input" type="text" name="atributo1" id="atributo1">
                </div>
    
                <div class="modal-contenido__item">
                    <h2>Descripcion</h2>
                    <input class="modal_item-input" type="text" name="atributo2" id="atributo2">
                </div>
    
                <div class="modal-contenido__item">
                    <h2>Valor</h2>
                    <input class="modal_item-input" type="text" name="atributo3" id="atributo3">
                </div>
    
                <div class="modal-contenido__item">
                    <h2>Valor</h2>
                    <input class="modal_item-input" type="text" name="atributo4" id="atributo4">
                </div>
    
                <div class="modal-contenido__item">
                    <h2>Valor</h2>
                    <input class="modal_item-input" type="text" name="atributo5" id="atributo5">
                </div>   

                <div class="modal-contenido__item">
                    <h2>Valor</h2>
                    <select class="modal_item-input" id="tipo_categoria" name="atributo6" id="atributo6">
                        
                    </select>

                    <!--<input class="modal_item-input" type="text" name="atributo6" id="atributo6"> -->
                </div> 

                <div class="modal_footer" style="flex-basis: 100%;display:flex;justify-content:end;">
                    <button type="submit" id="btn_submit">Agregar</button>
                    <button id="cancel-button">Cancelar</button>
                </div>
            </form>
        </div>
    </div>




     























