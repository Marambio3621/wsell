<body>

    <!-- MODAL AGREGAR PERSONAL-->


    <% if (producto) { %>
        <div class="modal-overlay" id="modal-overlay"></div>

        <div class="modal" id="modal">
            <div class="modal-contenido">
                <div class="modal_header">
                    <div>
                        <h1>Editar Producto</h1>
                    </div>
                </div>
                <form action="/delete" method="POST" class="modal_medium" >
                    <div class="modal-contenido__item" style="flex-basis: 100%;">
                        <input style="display: none;" class="modal_item-input" type="text" name="atributo1" value="<%= producto.sku %> " id="atributo1"><!--PARA QUE EL CRUD LO TOME-->
                        <b>¿Esta seguro/a de borrar el producto de SKU: <%= producto.sku %>  </b>
                    </div> 
    
                    <div class="modal_footer" style="flex-basis: 100%;display:flex;justify-content:end;">
                        <button type="submit">Editar</button>
                        <button id="cancel-button"><a href="../" >Cancelar</a></button>
                    </div>
                </form>
            </div>
        </div>
    <% } %>
    




     























    <div class="container">

        <!-- ASIDE IZQUIERDO -->
        <aside>
            <div class="aside__top">
                <div class="logo">
                    <img src="./images/logo.png"> <!-- FALTA PONER LOGO -->
                    <h2 style="color: bisque;">NOMBRE</h2>   <!-- NOMBRE DE PROYECTO -->
                </div>
                <div class="aside__close" id="close-btn">
                    <span class="material-icons-sharp">close</span>
                </div>
            </div>
            
            <!-- ITEMS DEL MENU -->
            <div class="aside__main">
                <a href="./index.html">
                    <span class="material-icons-sharp">space_dashboard</span>
                    <h3>Dashboard</h3>
                </a>

                <a href="./ventas.html">
                    <span class="material-icons-sharp">storefront</span>
                    <h3>Ventas</h3>
                </a>

                <a href="./productos.html">
                    <span class="material-icons-sharp">inventory_2</span>
                    <h3>Productos</h3>
                </a>

                <a href="#">
                    <span class="material-icons-sharp">inventory</span>
                    <h3>Informes</h3>
                </a>

                <a href="#">
                    <span class="material-icons-sharp">logout</span>
                    <h3>Salir</h3>
                </a>
            </div>
        </aside>

        <!-- MAIN SCREEN -->

        <!-- ASIDE DERECHO -->

        <div class="aside__derecho">
            <div class="top">
                <button id="menu-btn">
                    <span class="material-icons-sharp">menu</span>
                </button>
                <div class="cambio_tema" id="theme-toggler">
                    <span class="material-icons-sharp active">light_mode</span>
                    <span class="material-icons-sharp">dark_mode</span>
                </div>
                <div class="perfil">
                    <div class="info">
                        <p>¡Hola <b>Jean!</b></p>
                        <small class="text-muted">Admin</small>
                    </div>
                    <div class="profile-icon">
                        <span class="material-icons-sharp">account_circle</span>
                    </div>
                </div>
            </div>
            <!-- FIN DEL ASIDE TOP DERECHO-->

            


        </div>
    </div>


   
    <script src="js/index.js"></script>
    <script src="js/productos.js"></script>
